<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionPlatActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nomPlat"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:text="Nom du plat"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/imagesSIO"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />
    <EditText
        android:id="@+id/descriptif"
        android:layout_width="393dp"
        android:layout_height="100dp"
        android:text="Descriptif"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/nomPlat"
        app:layout_constraintTop_toBottomOf="@+id/nomPlat" />

    <EditText
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Prix"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/descriptif"
        app:layout_constraintTop_toBottomOf="@+id/descriptif" />

    <Button
        android:id="@+id/buttonEnregistrer"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="252dp"
        android:paddingHorizontal="40dp"
        android:text="Enregistrer"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="328dp"
        android:paddingHorizontal="40dp"
        android:text="Quitter"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />


</androidx.constraintlayout.widget.ConstraintLayout>
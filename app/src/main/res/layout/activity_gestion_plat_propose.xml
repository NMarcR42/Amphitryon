<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plat.platPropose.GestionPlatProposeActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/buttonAjouterProposition"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:text="Ajouter une proposition"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />

    <Button
        android:id="@+id/buttonModifierProposition"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:text="Modifier une proposition"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAjouterProposition" />

    <Button
        android:id="@+id/buttonSupprimerProposition"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:text="Supprimer une proposition"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifierProposition" />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:text="Quitter"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSupprimerProposition" />

</androidx.constraintlayout.widget.ConstraintLayout>
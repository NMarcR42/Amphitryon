<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/buttonLesClasses"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="SERVEUR"
        android:textSize="25sp"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"/>

    <Button
        android:id="@+id/buttonMaClasse"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Ma classe"
        android:textSize="25sp"
        android:paddingHorizontal="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLesClasses"
        app:layout_constraintTop_toBottomOf="@+id/buttonLesClasses"/>


    <Button
        android:id="@+id/buttonMesInfos"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Mes infos"
        android:textSize="25sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLesClasses"
        app:layout_constraintTop_toBottomOf="@+id/buttonMaClasse"/>

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Quitter"
        android:textSize="25sp"
        android:paddingHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLesClasses"
        app:layout_constraintTop_toBottomOf="@+id/buttonMesInfos"/>

</androidx.constraintlayout.widget.ConstraintLayout>
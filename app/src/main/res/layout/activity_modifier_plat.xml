<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plat.Gestion.ModifierPlatActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textV1"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:hint="Entrer le nom du plat à modifier"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="197dp"
        app:layout_constraintLeft_toLeftOf="@+id/imagesSIO"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"
        tools:ignore="NotSibling" />

    <Spinner
        android:id="@+id/spinnerNomPlat"
        android:layout_width="383dp"
        android:layout_height="41dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/textV1"
        app:layout_constraintTop_toBottomOf="@+id/textV1" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:hint="Renseignez les données à modifier"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="328dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerNomPlat"
        app:layout_constraintTop_toBottomOf="@+id/spinnerNomPlat"
        tools:ignore="UnknownIdInLayout" />

    <EditText
        android:id="@+id/editNouveauNomPlat"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:hint="Nouveau nom"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/textV2"
        app:layout_constraintTop_toBottomOf="@+id/textV2" />

    <EditText
        android:id="@+id/editNouvelleCategoriePlat"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:hint="Nouvelle catégorie"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/editNouveauNomPlat"
        app:layout_constraintTop_toBottomOf="@+id/editNouveauNomPlat" />

    <EditText
        android:id="@+id/editNouveauDescriptif"
        android:layout_width="393dp"
        android:layout_height="100dp"
        android:hint="Nouveau descriptif"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/editNouvelleCategoriePlat"
        app:layout_constraintTop_toBottomOf="@+id/editNouvelleCategoriePlat" />

    <Button
        android:id="@+id/buttonModifierPlat"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="40dp"
        android:text="Modifier"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNouveauDescriptif" />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="40dp"
        android:text="Quitter"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifierPlat" />


</androidx.constraintlayout.widget.ConstraintLayout>
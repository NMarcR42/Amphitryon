<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plat.platPropose.ModifierPlatProposeActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textV1"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:text="Choisissez le plat et le service à modifier"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="197dp"
        app:layout_constraintLeft_toLeftOf="@+id/imagesSIO"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO"
        tools:ignore="NotSibling" />

    <Spinner
        android:id="@+id/spinneridPlat"
        android:layout_width="383dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/textV1"
        app:layout_constraintTop_toBottomOf="@+id/textV1" />

    <EditText
        android:id="@+id/editIdService"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="Service"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/spinneridPlat"
        app:layout_constraintTop_toBottomOf="@+id/spinneridPlat" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="274dp"
        android:layout_height="28dp"
        android:text="Renseignez les nouvelles données"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="328dp"
        app:layout_constraintLeft_toLeftOf="@+id/editIdService"
        app:layout_constraintTop_toBottomOf="@+id/editIdService"/>

    <EditText
        android:id="@+id/editDate"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="AAAA-MM-JJ"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/textV2"
        app:layout_constraintTop_toBottomOf="@+id/textV2" />

    <EditText
        android:id="@+id/editQuantiteProposee"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="quantitee proposee"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/editDate"
        app:layout_constraintTop_toBottomOf="@+id/editDate" />

    <EditText
        android:id="@+id/editQuantiteVendue"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="quantitee vendue"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/editQuantiteProposee"
        app:layout_constraintTop_toBottomOf="@+id/editQuantiteProposee" />

    <EditText
        android:id="@+id/editPrixVente"
        android:layout_width="393dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="Prix de vente"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/editQuantiteVendue"
        app:layout_constraintTop_toBottomOf="@+id/editQuantiteVendue" />
    <Button
        android:id="@+id/buttonModifierPlat"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="40dp"
        android:text="Modifier"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrixVente" />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="40dp"
        android:text="Quitter"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifierPlat" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plat.Gestion.SupprimerPlatActivity">

    <ImageView
        android:id="@+id/imagesSIO"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Supprimer un Plat"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="195dp"/>

    <Spinner
        android:id="@+id/spinnerNomPlat"
        android:layout_width="383dp"
        android:layout_height="41dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/imagesSIO"
        app:layout_constraintTop_toBottomOf="@+id/imagesSIO" />

    <Button
        android:id="@+id/buttonSupprimer"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp"
        android:text="Supprimer"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerNomPlat" />

    <Button
        android:id="@+id/buttonQuitter"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="40dp"
        android:text="Quitter"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSupprimer"/>


</androidx.constraintlayout.widget.ConstraintLayout>